{
  "name": "yarems",
  "version": "1.0.0",
  "description": "Yet Another React Electron Menubar Starter",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "NODE_ENV=development electron .",
    "dev": "concurrently -k 'node -r babel-register server.js' 'npm start'",
    "build": "NODE_ENV=production webpack --config webpack.config.production.babel.js",
    "package": "npm run build && electron-builder"
  },
  "author": "Emmanuel Pilande",
  "engine-strict": true,
  "engines": {
    "node": ">= 6.x",
    "npm": ">= 3.x"
  },
  "build": {
    "appId": "org.epilande.yarems",
    "productName": "Yarems",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "index.html",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/app.icns"
    }
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "fix-path": "^2.1.0",
    "menubar": "^5.1.0",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-hot-loader": "^4.0.0-beta.18",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "styled-components": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.2-beta.5",
    "electron-builder": "^19.55.3",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.14.0",
    "file-loader": "^1.1.5",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^18.0.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-merge": "^4.1.1"
  }
}
